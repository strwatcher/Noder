      <ScrollPane fx:id="addMenuScroll" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="addMenuContainer" prefHeight="584.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="intNodeButton" mnemonicParsing="false" text="IntNode">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Button>
                  <Button fx:id="floatNodeButton" layoutX="46.0" layoutY="20.0" mnemonicParsing="false" text="FloatNode">
                     <font>
                        <Font size="26.0" />
                     </font>
                  </Button>
                  <Button fx:id="stringNodeButton" layoutX="46.0" layoutY="76.0" mnemonicParsing="false" text="StringNode">
                     <font>
                        <Font size="26.0" />
